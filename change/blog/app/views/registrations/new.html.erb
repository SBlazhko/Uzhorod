<ul>
<h3>Registration form</h3>

  <%= form_for @user, url: registrations_path do |f| %>
  <%= f.label :first_name %> <br>
  <%= f.text_field :first_name %>
  <br>
  <br>
  <%= f.label :last_name %><br>
  <%= f.text_field :last_name %>
  <br>
  <br>
  <%= f.label :email %><br>
  <%= f.text_field :email %>
  <br>
  <br>
  <%= f.label :password %><br>
  <%= f.text_field :password %>
  <br>
  <br>
  <%= f.label :male %>
  <%= f.radio_button :gender, true %>
  <%= f.label :female %>
  <%= f.radio_button :gender, false %>
  <br>
  <br>
  <%= f.label :country %>
  <br>
  <%= f.select :country, country_helper %>
  <br>
  <br>
  <%= f.label :city %><br>
  <%= f.text_field :city %>
  <br>
  <br>
  <%= f.submit "Create User", class: 'btn mbt'%>
  <% end %>
</ul>
